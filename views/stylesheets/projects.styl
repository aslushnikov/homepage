#projects-section
  #projects-board
    display: inline-block
    width: 50%
    height: 370px
    float: right
    margin-left: 1em;

    overflow: auto
    border-top: 1px dashed black
    border-bottom: 1px dashed black
    padding-left: 50px
    padding-top: 1em

    .project
      display: inline-block
      width: 100px
      height: 100px
      margin-left: 12px
      margin-bottom: 12px

      box-shadow: 2px 2px 6px 3px #777

      cursor: pointer
      text-align: center
      vertical-align: top
      background-color: #efefef
      border: 4px outset gray

      border-radius: 10px

      img
        width: 80px
        height: 80px
        display: inline-block
      .text
        font-size: 10pt

