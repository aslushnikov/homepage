body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin: 0
  padding: 0
  background-image: url('/images/bg.jpg')

div, nav, a
  //border: 1px solid black

#twitter
  display: none
  position: fixed
  right: 0px
  width: 250px
  height: 100%

#wrap
  border-radius: 10px
  width: 900px
  min-height: 600px
  margin: auto
  margin-top: 20px
  background-color: white

  #title
    height: 100px
    padding: 10px
    padding-left: 100px
    padding-right: 100px
    #welcome
      text-align: center
      font-weight: bold
      font-size: 50px
      float: left
    #signature
      float: right
      clear: left
      font-size: 30px

  #navigation
    text-align: center
    background-color: black
    padding-top: 5px
    padding-bottom: 5px
    div
      width: 19%
      display: inline-block
      color: white
      border: 1px dashed white
      margin-right: 3px
      cursor: pointer

  #main
    width: 90%
    margin: auto
    overflow: auto
    padding-bottom: 2em
    #container
      font-size: 14pt

